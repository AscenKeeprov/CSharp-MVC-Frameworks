@using Chushka.Web.Models

@model ProductViewModel

<div class="row">
    <div class="col-12 mt-2 mx-auto">
        <h3 class="text-center"><b>@Model.Name</b></h3>
    </div>
</div>
<hr class="hr-2 bg-dark" />
<div class="row">
    <div class="col-12 mx-auto">
        <div class="d-flex justify-content-around">
            <h4 class="text-center"><b>Type:</b> @Model.Type</h4>
            <h4 class="text-center"><b>Price:</b> @($"${Model.Price}")</h4>
        </div>
    </div>
</div>
<hr class="hr-2 bg-dark" />
<div class="row">
    <div class="col-12 mx-auto">
        <h4 class="text-center"><b>Description</b></h4>
        <p class="text-center mt-4">@Model.Description</p>
    </div>
</div>
<hr class="hr-2 bg-dark" />
<div class="row">
    <div class="col-12 mx-auto">
        <h4 class="text-center"><b>Actions</b></h4>
        <div class="row">
            <div class="col-xs-10 col-sm-8 col-md-6 col-lg-4 mt-3 mx-auto">
                <div class="d-flex flex-wrap justify-content-between">
                    <div class="mx-auto">
                        <a asp-controller="Orders" asp-action="Create" asp-route-productId="@Model.Id" class="btn my-1 bg-chushka text-white">Order</a>
                    </div>
                    @if (Context.User.IsInRole(AdminRoleName))
		    {
                        <div class="mx-auto">
                            <a asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id" class="btn my-1 bg-chushka text-white">Edit</a>
                        </div>
                        <div class="mx-auto">
                            <a asp-controller="Products" asp-action="Delete" asp-route-id="@Model.Id" class="btn my-1 bg-chushka text-white">Delete</a>
                        </div>
		    }
                </div>
            </div>
        </div>
    </div>
</div>