@using PertensaCo.Web.Areas.Identity.Models;

@model ClientProfileViewModel

<fieldset>
	<div class="form-group">
		<div class="form-row">
			<div class="input-group col-12">
				<div class="input-group-prepend">
					<span class="input-group-text p-1">
						<label asp-for="FirstName" class="m-0">Name</label>
					</span>
				</div>
				<input asp-for="FirstName" class="form-control" placeholder="First name" />
				<input asp-for="LastName" class="form-control" placeholder="Last name" />
			</div>
		</div>
		<div class="form-row justify-content-around">
			<span asp-validation-for="FirstName" class="text-danger"></span>
			<span asp-validation-for="LastName" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<div class="form-row">
			<div class="input-group col-12">
				<div class="input-group-prepend">
					<span class="input-group-text p-1">
						<label asp-for="PhoneNumber" class="m-0"></label>
					</span>
				</div>
				<input asp-for="PhoneNumber" class="form-control" />
			</div>
		</div>
		<div class="form-row">
			<span asp-validation-for="PhoneNumber" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group my-2 text-center">
		<button asp-route-pid="@Model.Id" type="submit" class="btn btn-plaque">
			<span class="far fa-times-circle fa-sm screw-head"></span>
			<span>&nbsp;Save&nbsp;Changes&nbsp;</span>
			<span class="far fa-times-circle fa-sm screw-head"></span>
		</button>
	</div>
</fieldset>