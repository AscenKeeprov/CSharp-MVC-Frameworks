@using PertensaCo.Web.Areas.Identity.Models;

@model ClientProfileViewModel

<fieldset>
	<div class="form-group">
		<div class="form-row">
			<div class="input-group col-12">
				<div class="input-group-prepend">
					<span class="input-group-text p-1">
						<label asp-for="CompanyName" class="m-0"></label>
					</span>
				</div>
				<input asp-for="CompanyName" class="form-control" />
			</div>
		</div>
		<div class="form-row">
			<span asp-validation-for="CompanyName" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group">
		<div class="form-row">
			<div class="input-group col-12">
				<div class="input-group-prepend">
					<span class="input-group-text p-1">
						<label asp-for="ShippingAddress" class="m-0"></label>
					</span>
				</div>
				<input asp-for="ShippingAddress" class="form-control" />
			</div>
		</div>
		<div class="form-row">
			<span asp-validation-for="ShippingAddress" class="text-danger"></span>
		</div>
	</div>
	<div class="form-group my-2 text-center">
		<button asp-route-pid="@Model.Id" type="submit" class="btn btn-plaque">
			<span class="far fa-times-circle fa-sm screw-head"></span>
			<span>&nbsp;Save&nbsp;Changes&nbsp;</span>
			<span class="far fa-times-circle fa-sm screw-head"></span>
		</button>
	</div>
</fieldset>