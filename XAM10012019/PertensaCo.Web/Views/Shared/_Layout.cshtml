<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@(ViewData.ContainsKey(TitleKey) ? $"{ViewData[TitleKey]} - " : string.Empty)Pertensa Co.</title>
	<link rel="stylesheet" type="text/css" href="~/lib/bootstrap/css/bootstrap.min.css"
		  asp-fallback-href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" />
	<link rel="stylesheet" type="text/css" href="~/lib/bootstrap/css/tempusdominus-bootstrap-4.min.css"
		  asp-fallback-href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.1.2/css/tempusdominus-bootstrap-4.min.css" />
	<link rel="stylesheet" type="text/css" href="~/css/fontawesome.min.css"
		  asp-fallback-href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" />
	<link rel="stylesheet" type="text/css" href="~/css/site.min.css" asp-append-version="true" />
	<link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico">
</head>
<body>
	<header class="sticky-top w-100" role="banner">
		<nav class="flex-grow-1 navbar navbar-expand-sm navbar-light m-0 px-2 bg-light" role="navigation">
			<a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand mr-0">
				<img src="~/images/brand.png" alt="Pertensa Co." height="32" width="32" />
			</a>
			<button class="sidebar-toggler" type="button" data-toggle="collapse" data-target="#sidebar" title="Toggle sidebar" aria-controls="sidebar" aria-expanded="false" aria-label="Toggle sidebar">
				<img src="~/images/brand.png" alt="Pertensa Co." height="32" width="32" />
			</button>
			<button class="navbar-toggler ml-auto mr-1 border-secondary" type="button" data-toggle="collapse" data-target="#navbarContent" title="Toggle navigation" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarContent">
				<ul class="navbar-nav d-flex d-inline-flex flex-row mr-auto">
					<li class="nav-item mx-2 mx-sm-0">
						<a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">
							<span class="fa fa-home fa-sm"></span>
							<span class="nav-link-label">Home</span>
						</a>
					</li>
					<li class="nav-item mx-2 mx-sm-0">
						<a asp-area="" asp-controller="Home" asp-action="About" class="nav-link">
							<span class="fa fa-info-circle fa-sm"></span>
							<span class="nav-link-label">About</span>
						</a>
					</li>
					<li class="nav-item mx-2 mx-sm-0">
						<a asp-area="" asp-controller="Home" asp-action="Contacts" class="nav-link">
							<span class="fa fa-mail-bulk fa-sm"></span>
							<span class="nav-link-label">Contacts</span>
						</a>
					</li>
				</ul>
				<partial name="~/Areas/Identity/Views/Shared/_AuthenticatePartial.cshtml" />
			</div>
		</nav>
	</header>
	<main>
		@if (User.HasType(nameof(Employee)))
		{
			<partial name="_SidebarPartial" />
		}
		<div class="main-content">
			@if (ViewData.ContainsKey(ErrorKey))
			{
				<partial name="_ErrorMessagePartial" />
			}
			@if (ViewData.ContainsKey(InfoKey))
			{
				<partial name="_InfoMessagePartial" />
			}
			@RenderBody()
		</div>
	</main>
	<footer>
		<hr class="mx-1 my-0" />
		<partial name="~/Areas/Identity/Views/Shared/_CookieConsentPartial.cshtml" />
		<div class="d-flex flex-row my-1 px-2 align-items-center justify-content-center text-muted">
			<span>&copy; 2018 Copyright &mdash; Pertensa&nbsp;Co.</span>
			<span class="small mx-1">
				<a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy&nbsp;policy</a>
			</span>
		</div>
	</footer>
	<script src="~/lib/jquery/jquery.min.js"
			asp-fallback-src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
	<script src="~/lib/moment/moment-with-locales.min.js"
			asp-fallback-src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.23.0/moment-with-locales.min.js"></script>
	<script src="~/lib/popper/popper.min.js"></script>
	<script src="~/lib/bootstrap/js/bootstrap.min.js"
			asp-fallback-src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
	<script src="~/lib/bootstrap/js/tempusdominus-bootstrap-4.min.js"
			asp-fallback-src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.1.2/js/tempusdominus-bootstrap-4.min.js"></script>
	<script src="~/js/site.min.js"></script>
	@RenderSection("Scripts", required: false)
</body>
</html>