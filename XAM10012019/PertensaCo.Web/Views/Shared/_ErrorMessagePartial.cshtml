<div class="d-flex flex-row justify-content-center my-1 px-1" id="errorRow">
	<div class="d-flex flex-column mx-auto">
		<div class="alert alert-danger alert-dismissible m-0 fade show" id="errorAlert" role="alert">
			@if (ViewData[ErrorKey] is IEnumerable<string> errorMessages)
			{
				int errorMessageNumber = 1;
				foreach (var errorMessage in errorMessages)
				{
					<strong id="@($"errorMessage{errorMessageNumber++}")">@errorMessage</strong>
					<br />
				}
			}
			else
			{
				<strong id="errorMessage">@ViewData[ErrorKey]</strong>
			}
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	</div>
</div>