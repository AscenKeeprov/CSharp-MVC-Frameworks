<div class="d-flex flex-row justify-content-center my-1 px-1" id="infoRow">
	<div class="d-flex flex-column mx-auto">
		<div class="alert alert-success alert-dismissible m-0 fade show" id="infoAlert" role="alert">
			@if (ViewData[InfoKey] is IEnumerable<string> infoMessages)
			{
				int infoMessageNumber = 1;
				foreach (var infoMessage in infoMessages)
				{
					<strong id="@($"infoMessage{infoMessageNumber++}")">@infoMessage</strong>
					<br />
				}
			}
			else
			{
				<strong id="infoMessage">@ViewData[InfoKey]</strong>
			}
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">&times;</span>
			</button>
		</div>
	</div>
</div>